{
  "name": "pingwire-api-documentation",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://docs.pingwire.io",
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.3",
    "@testing-library/user-event": "^13.5.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-scripts": "^5.0.1",
    "redoc": "^2.5.2",
    "styled-components": "^5.3.3",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "start": "react-scripts start",
    "bundle": "redocly bundle --config=.redocly.yml pingwire -o ./public/open-api-bundle.yml --force",
    "build": "npm run bundle && react-scripts build",
    "test": "npm run bundle && redocly lint --config=.redocly.yml pingwire-bundled",
    "test:dev": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "extends": [
      "airbnb",
      "airbnb/hooks",
      "plugin:react/jsx-runtime"
    ],
    "ignorePatterns": [
      "node_modules",
      "build"
    ],
    "rules": {
      "react/jsx-filename-extension": "off",
      "react/jsx-one-expression-per-line": "off"
    },
    "env": {
      "browser": true
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@redocly/cli": "^2.15.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "gh-pages": "^6.3.0"
  }
}
